<svg width="180" height="180" viewBox="0 0 180 180" fill="none" xmlns="http://www.w3.org/2000/svg">
  <rect width="180" height="180" rx="40" fill="url(#gradient)"/>
  <defs>
    <linearGradient id="gradient" x1="0" y1="0" x2="180" y2="180" gradientUnits="userSpaceOnUse">
      <stop offset="0%" stop-color="#8B5CF6"/>
      <stop offset="50%" stop-color="#A855F7"/>
      <stop offset="100%" stop-color="#EC4899"/>
    </linearGradient>
  </defs>
  
  <!-- Balance icon centered and scaled -->
  <g transform="translate(40, 50)">
    <!-- Left scale -->
    <circle cx="20" cy="65" r="18" fill="white" opacity="0.95"/>
    <line x1="20" y1="47" x2="20" y2="15" stroke="white" stroke-width="8" stroke-linecap="round"/>
    
    <!-- Right scale -->
    <circle cx="80" cy="65" r="18" fill="white" opacity="0.95"/>
    <line x1="80" y1="47" x2="80" y2="15" stroke="white" stroke-width="8" stroke-linecap="round"/>
    
    <!-- Center balance beam -->
    <line x1="20" y1="15" x2="80" y2="15" stroke="white" stroke-width="10" stroke-linecap="round"/>
    
    <!-- Center pivot -->
    <circle cx="50" cy="15" r="8" fill="white"/>
    <line x1="50" y1="15" x2="50" y2="0" stroke="white" stroke-width="7" stroke-linecap="round"/>
    
    <!-- Decorative elements -->
    <circle cx="50" cy="0" r="5" fill="white"/>
  </g>
  
  <!-- Bottom text decoration -->
  <text x="90" y="155" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="white" text-anchor="middle" opacity="0.9">NegoLab</text>
</svg>
